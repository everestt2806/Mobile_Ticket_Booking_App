<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_color"
    tools:context=".activities.IntroActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/introImage"
                    android:layout_width="match_parent"
                    android:layout_height="520dp"
                    android:adjustViewBounds="true"
                    android:contentDescription="intro"
                    android:scaleType="centerCrop"
                    android:src="@drawable/intro"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="0dp"
                    android:layout_height="100dp"
                    android:importantForAccessibility="no"
                    android:src="@drawable/gradient_background"
                    app:layout_constraintBottom_toBottomOf="@+id/introImage"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="8dp"
                android:layout_marginStart="24dp"
                android:layout_marginEnd="24dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Khám phá"
                    android:textColor="@color/white"
                    android:textSize="27sp" />

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Thế Giới Giải Trí"
                    android:textColor="@color/light_purple"
                    android:textSize="27sp"
                    />

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="KHÔNG GIỚI HẠN"
                    android:textSize="27sp"
                    android:textColor="@color/white"
                    />

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="17sp"
                    android:textColor="#9F9A9A"
                    android:text="Đắm chìm trong thế giới điện ảnh đầy màu sắc với kho nội dung phong phú
liên tục cập nhật. Dễ dàng tìm kiếm theo thể loại, tra cứu tựa phim yêu thích,
hoặc để chúng tôi đề xuất những bộ phim phù hợp nhất với sở thích của bạn." />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btnGetStarted"
                    style="@style/RoundedPurpleButton"
                    android:layout_width="match_parent"
                    android:textSize="17sp"
                    android:layout_marginTop="25sp"
                    android:layout_height="wrap_content"
                    android:text="Tiếp tục" />

            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>
